/* pages/mvList/mvList.wxss */

.cu-card>.cu-item {
  margin: 20rpx;
}

.cu-tag:not([class*="bg"]):not([class*="line"]) {
  background-color: transparent;
}

.image {
  width: 100%;
  height: 136px;
}

.icon-play {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.bg-shadeBottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: left;
  padding: 10rpx;
  background-color: transparent;
  background-image: none !important;
}