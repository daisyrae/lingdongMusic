/* pages/audioPlay/audioPlay.wxss */

.container {
  position: fixed;
  top: 0;
  height: 60%;
  width: 100%;
  z-index: 1;
  -webkit-transform: translateZ(0);
}

.player-bg {
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  filter: blur(120rpx);
  z-index: 10;
  -webkit-transform: translateZ(0);
}

.player-img {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
}

.song-title {
  z-index: 10;
  margin: 30rpx;
}

.song-image {
  width: 400rpx;
  height: 400rpx;
  margin-top: 30rpx;
  border-radius: 50%;
  z-index: 10;
  border: 20px solid hsla(0, 0%, 90%, 0.5);
  background: #bbb;
  background-clip: padding-box;
}

.rotate {
  animation: rotate 30s linear infinite;
}

.rotate-paused {
  animation: rotate 30s linear infinite;
  animation-play-state: paused;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.bg-none {
  background-color: transparent;
  background-image: none !important;
}

.time-area {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  padding: 30rpx;
}

.slider {
  width: 100%;
}

.control {
  position: fixed;
  z-index: 10;
  bottom: 0;
  width: 100%;
  -webkit-transform: translateZ(0);
}

.control-opt {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  padding: 30rpx;
}

.icon-bg {
  width: 80rpx;
  height: 80rpx;
}

.icon-lg {
  width: 80rpx;
  height: 80rpx;
}

.icon-nm {
  width: 60rpx;
  height: 60rpx;
}

.icon_sm {
  width: 45rpx;
  height: 45rpx;
}

.scroll-list {
  height: 700rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  padding: 30rpx 20rpx;
}

.list-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: left;
  margin-left: 20rpx;
}

.list-index {
  width: 50rpx;
}

.bg-play {
  background-color: #f9d7ea;
}

.cu-bar .action:first-child>text[class*="icon"] {
  font-size: 24rpx;
  margin-left: 0;
}

.contentText{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}